<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="/css/issue_create_page.css">

<div class="flex-container">
    <div id="page-heading">
        <h2 class="card-title"> Create New Issue </h2>
    </div>
    <div>
        <div class="card text-bg-info text-center" style="width: 500px;">
            <form action="/issues/create-issue/<%= pid %>" method="post">
                <div class="">
                    <div class="card-body">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="title" name="title" placeholder="title..." required>
                            <label for="title">Title</label>
                        </div>
                        <div class="form-group mb-3">
                            <textarea rows="6" type="text" class="form-control" id="Issue_description" placeholder="Keep track of you issues, bugs, todos by creating them here..." name="description" required></textarea>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="Project_author" placeholder="Author" name="author" required>
                            <label for="Project_author">Author</label>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success">Submit new issue</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>