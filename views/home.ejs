<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="/css/home.css">

<div class="flex-container">
    <div id="page-heading">
        <h2 class="card-title"> Your Projects: </h2>
    </div>
    <div>
        <ul class="list-group list-group-flush" id="projects-list">
            <% for(let project of projects){%>
                <li class="list-group-item">
                    <div class="card p-3">
                        <div class="card-header">
                            <h3 style="display: inline;">
                                <%= project.name %>
                            </h3>
                            <a href="/project/details-page/<%= project._id %>" class="btn btn-outline-secondary" style="display: inline; position: relative; top: -5px;left: 10px;"> View Project</a>
                        </div>
                        <div class="card-body">
                        <blockquote class="blockquote mb-0">
                            <p><%= project.description %></p>
                            <footer class="blockquote-footer"><%= project.author %></footer>
                        </blockquote>
                        </div>
                    </div>
                </li>
            <%} %>
        </ul>        
    </div>
    <div>
        <a href="/project/create-page" class="btn btn-outline-dark">Create Project</a>
    </div>
</div>
