<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="/css/project_details_page.css">

<div class="flex-container">
    <div id="page-heading">
        <h2 class="card-title"> <%= project.name %> </h2>
    </div>
    <div>
        <ul class="list-group list-group-flush" id="projects-list">          
                <li class="list-group-item">
                    <div class="card p-3">
                        <div class="card-header">
                            Project Name:   <%= project.name %>
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p>Project Description: <br> <%= project.description %></p>
                                <footer class="blockquote-footer"><%= project.author %></footer>
                            </blockquote>
                        </div>
                        <div class="card-body">
                            <h3>Issues:</h3>
                            <ol class="list-group list-group-numbered">
                                <li class="list-group-item">Issue 1</li>
                                <li class="list-group-item">Issue 2</li>
                                <li class="list-group-item">Issue 3</li>
                            </ol>
                        </div>
                    </div>
                </li>
        </ul>        
    </div>
    <div>
        <a href="/issues/create-page" class="btn btn-outline-dark">Create Issue</a>
    </div>
</div>
